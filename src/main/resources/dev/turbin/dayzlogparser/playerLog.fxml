<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="dev.turbin.dayzlogparser.PlayerLogSceneController">

    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>

    <Button text="Назад" onAction="#onBackButtonClick"/>

    <TableView fx:id="logTable">
        <columns>
            <TableColumn text="Время" maxWidth="500">
                <cellValueFactory>
                    <PropertyValueFactory property="time" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Позиция" maxWidth="500">
                <cellValueFactory>
                    <PropertyValueFactory property="position" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Действие" maxWidth="1000">
                <cellValueFactory>
                    <PropertyValueFactory property="action" />
                </cellValueFactory>
            </TableColumn>
        </columns>
        <!-- Эта настройка заставляет колонки занимать всё пространство -->
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>
