<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="dev.turbin.dayzlogparser.PlayersSceneController">

    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>

    <TextField fx:id="textField" promptText="Введите путь к файлам"/>

    <Button fx:id="startButton" text="Всосать логи!" onAction="#onStartButtonClick"/>

    <TableView fx:id="playersTable"
               onMouseClicked="#onTableDoubleClick">
        <columns>
            <!-- Define Columns -->
            <TableColumn text="Ник игрока" maxWidth="200">
                <cellValueFactory>
                    <PropertyValueFactory property="nickname" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Позиция" maxWidth="500">
                <cellValueFactory>
                    <PropertyValueFactory property="position" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Действие" maxWidth="1000">
                <cellValueFactory>
                    <PropertyValueFactory property="action" />
                </cellValueFactory>
            </TableColumn>
        </columns>
        <!-- Эта настройка заставляет колонки занимать всё пространство -->
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>
